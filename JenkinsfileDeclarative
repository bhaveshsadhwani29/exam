pipeline {
    agent any

    tools {
        maven "prac4maven"
    }

    stages {
        stage('Compile') {
            steps {
                bat "mvn clean compile"
            }
        }
		
		stage('Test') {
            steps {
                bat "mvn test"
            }
        }
        
        stage('Build') {
            steps {
                bat "mvn -Dmaven.test.failure.ignore clean package"
            }
        }
    }
	
	post {
	success {
            echo "Success"
        }
		
        failure {
	    echo "(test failed) Building Unstable Version"

	    bat "mvn -Dmaven.test.failure.ignore clean package"
	}
    }
}
